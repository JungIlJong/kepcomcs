<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kepco.app.domain.sample.mapper.SampleMapper">

    <!-- 공통 컬럼 목록 -->
    <sql id="sampleColumns">
        id,
        title,
        writer,
        created_at
    </sql>

    <!-- ResultMap -->
    <resultMap id="SampleMap" type="com.kepco.app.domain.sample.dto.SampleSearchResponse">
        <id     property="id"        column="id"/>
        <result property="title"     column="title"/>
        <result property="writer"    column="writer"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select
            id="selectSample"
            resultMap="SampleMap"
            parameterType="long">
        SELECT
        <include refid="sampleColumns"/>
        FROM VST_SAMPLE
        WHERE id = #{id}
    </select>

    <select id="selectSampleList"
            resultMap="SampleMap"
            parameterType="com.kepco.app.domain.sample.dto.SampleSearchRequest">
        SELECT
        <include refid="sampleColumns"/>
        FROM VST_SAMPLE
         WHERE 1 = 1
        <if test="!searchKeyword.isEmpty()">
            AND title LIKE CONCAT('%', #{searchKeyword}, '%')
        </if>
        <if test="user != null and !user.isEmpty()">
            AND writer = #{user}
        </if>
        ORDER BY id DESC
        LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
    </select>

    <select
            id="countSample"
            resultType="int"
            parameterType="com.kepco.app.domain.sample.dto.SampleSearchRequest">
        SELECT COUNT(*) FROM VST_SAMPLE
        WHERE 1 = 1
        <if test="!searchKeyword.isEmpty()">
            AND title LIKE CONCAT('%', #{searchKeyword}, '%')
        </if>
        <if test="user != null and !user.isEmpty()">
            AND writer = #{user}
        </if>
    </select>

    <!-- 4. 등록 -->
    <insert id="insertSample" parameterType="map" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO VST_SAMPLE (title, writer, created_at)
        VALUES (#{title}, #{writer}, NOW())
    </insert>

    <!-- 5. 수정 -->
    <update id="updateSample" parameterType="map">
        UPDATE VST_SAMPLE
        SET title = #{title},
            writer = #{writer}
        WHERE id = #{id}
    </update>

    <!-- 6. 삭제 -->
    <delete id="deleteSample" parameterType="long">
        DELETE FROM VST_SAMPLE
        WHERE id = #{id}
    </delete>

</mapper>